{
  "compilerOptions": {
    "declaration": true,
    "module": "es2020",
    "target": "es2015",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "types": []
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ngx-strongly-typed-forms.js",
    "flatModuleId": "ngx-strongly-typed-forms"
  },
  "files": [
    "./public_api.ts"
  ]
}
